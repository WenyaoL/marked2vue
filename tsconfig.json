{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    /*"declaration": true,
    "declarationDir": "./types",*/
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": false,
    "strictNullChecks": false,
    "allowJs": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
  },
  "include": [
    "src/**/*.ts", 
    "src/**/*.d.ts", 
    "src/**/*.tsx", 
    "src/**/*.vue",
  ],
  "exclude": [
    "node_modules",
    "src/marked/**/*.js",
  ],
  "files": [
    "src/vueComponent/shims-vue.d.ts"
  ]
}